% logo
\newlength{\logoleftwidth}
\setlength{\logoleftwidth}{0cm}
\newlength{\logorightwidth}
\setlength{\logorightwidth}{0cm}
\newlength{\maxlogowidth}  % space on both sides set to maxlogowidth to keep title centered
\setlength{\maxlogowidth}{0cm}

\newcommand{\logoright}[1]{
  \newcommand{\insertlogoright}{#1}
  \settowidth{\logorightwidth}{\insertlogoright}
  \addtolength{\logorightwidth}{10ex}
  \setlength{\maxlogowidth}{\maxof{\logoleftwidth}{\logorightwidth}}
}
\newcommand{\logoleft}[1]{

  \newcommand{\insertlogoleft}{#1}
  \settowidth{\logoleftwidth}{\insertlogoleft}
  \addtolength{\logoleftwidth}{10ex}
  \setlength{\maxlogowidth}{\maxof{\logoleftwidth}{\logorightwidth}}
}

% ====================
% Headline (NEW 2-COLUMN VERSION)
% ====================

\setbeamertemplate{headline}
{
  \begin{beamercolorbox}{headline}
    \begin{columns}[T] % Top-align the columns
      \hspace{-10px}
      % --- COLUMN 2: Title Area (65% of width) ---
      % Provides the container for the title, author, etc.
      \begin{column}{0.50\paperwidth}
        \vskip17 ex
        \RaggedRight % Aligns the text block to the right
        % Add a minipage to allow for line breaks within raggedleft
        \begin{minipage}{\linewidth}
            \RaggedRight % Text is right-aligned inside this box
            \ifx \inserttitle \empty \else
              {\usebeamerfont{headline title}\usebeamercolor[fg]{headline title}\inserttitle\\[1ex]}
            \fi
            \ifx \beamer@shortauthor \empty \else
              {\usebeamerfont{headline author}\usebeamercolor[fg]{headline author}\insertauthor\\}
            \fi
            \ifx \insertinstitute \empty \else
              {\usebeamerfont{headline institute}\usebeamercolor[fg]{headline institute}\insertinstitute\\}
            \fi
        \end{minipage}
        \vfill
      \end{column}
      %\hspace{30px}
      % --- COLUMN 1: Branding Area (35% of width) ---
      % Provides the container for the \logoleft content.
      \begin{column}{0.25\paperwidth}
        \vskip100px
        \hspace{-250px}
        \ifdefined\insertlogoleft
          \centering % Center the resized box within the column
          \insertlogoleft
        \fi
        \vfill % Pushes content to the top
      \end{column}
      
    \end{columns}
    \vspace{10ex}
    \begin{beamercolorbox}[wd=\paperwidth,colsep=0.5ex]{headline rule}\end{beamercolorbox}
  \end{beamercolorbox}
}

% Block
\setbeamertemplate{block begin}
{
  \small
  \begin{beamercolorbox}[colsep*=0ex,dp=2ex,center]{block title}
    \vskip0pt
    \usebeamerfont{block title}\insertblocktitle
    \vskip-1.25ex
    \begin{beamercolorbox}[colsep=0.025ex]{block separator}\end{beamercolorbox}
  \end{beamercolorbox}
  {\parskip0pt\par}
  \usebeamerfont{block body}
  \vskip-0.5ex
  \begin{beamercolorbox}[colsep*=0ex]{block body}
  \justifying
  \setlength{\parskip}{1ex}
  \vskip-2ex
}
\setbeamertemplate{block end}
{
  \end{beamercolorbox}
  \vskip0pt
  \vspace*{2ex}
}

